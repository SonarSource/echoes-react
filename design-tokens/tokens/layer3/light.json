{
  "echoes": {
    "form-control": {
      "colors": {
        "background": {
          "default": {
            "$type": "color",
            "$value": "{echoes.color.surface.default}"
          },
          "hover": {
            "$type": "color",
            "$value": "{echoes.color.surface.hover}"
          }
        },
        "border": {
          "default": {
            "$type": "color",
            "$value": "{echoes.color.border.bold}"
          },
          "focus": {
            "$type": "color",
            "$value": "{echoes.color.border.weak}"
          }
        },
        "icon": {
          "default": {
            "$type": "color",
            "$value": "{echoes.color.icon.subtle}"
          }
        }
      }
    },
    "logos": {
      "colors": {
        "text": {
          "$type": "color",
          "$value": "#290042"
        },
        "brand": {
          "$type": "color",
          "$value": "#126ED3"
        },
        "sonar-whale": {
          "$type": "color",
          "$value": "#D3121D"
        }
      }
    },
    "modal": {
      "colors": {
        "shadow": {
          "gradient": {
            "$type": "color",
            "$value": "rgba(0,0,0,0.2)"
          }
        }
      }
    },
    "overlays": {
      "innerShadow": {
        "default": {
          "$type": "boxShadow",
          "$value": {
            "x": "0",
            "y": "-6",
            "blur": "10",
            "spread": "0",
            "color": "rgba(0,0,0,0.05)",
            "type": "innerShadow"
          }
        }
      }
    },
    "ratings": {
      "colors": {
        "background": {
          "ratingA": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.green.200}"
            }
          },
          "ratingB": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.yellowGreen.200}"
            }
          },
          "ratingC": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.yellow.200}"
            }
          },
          "ratingD": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.orange.200}"
            }
          },
          "ratingE": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.red.200}"
            }
          }
        },
        "text": {
          "ratingA": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.green.900}"
            }
          },
          "ratingB": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.yellowGreen.900}"
            }
          },
          "ratingC": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.yellow.900}"
            }
          },
          "ratingD": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.orange.900}"
            }
          },
          "ratingE": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.red.900}"
            }
          }
        },
        "border": {
          "ratingA": {
            "hover": {
              "$type": "color",
              "$value": "{echoes.color.green.500}"
            }
          },
          "ratingB": {
            "hover": {
              "$type": "color",
              "$value": "{echoes.color.yellowGreen.500}"
            }
          },
          "ratingC": {
            "hover": {
              "$type": "color",
              "$value": "{echoes.color.yellow.600}"
            }
          },
          "ratingD": {
            "hover": {
              "$type": "color",
              "$value": "{echoes.color.orange.400}"
            }
          },
          "ratingE": {
            "hover": {
              "$type": "color",
              "$value": "{echoes.color.red.500}"
            }
          }
        }
      }
    },
    "severityBadge": {
      "colors": {
        "background": {
          "severity": {
            "blocker": {
              "prefix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.red.100}"
                }
              },
              "suffix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.red.200}"
                },
                "hover": {
                  "$extensions": {
                    "studio.tokens": {
                      "modify": {
                        "type": "darken",
                        "value": "0.02",
                        "space": "lch"
                      }
                    }
                  },
                  "$type": "color",
                  "$value": "{echoes.color.red.200}"
                }
              }
            },
            "high": {
              "prefix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.red.50}"
                }
              },
              "suffix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.red.100}"
                },
                "hover": {
                  "$extensions": {
                    "studio.tokens": {
                      "modify": {
                        "type": "darken",
                        "value": "0.02",
                        "space": "lch"
                      }
                    }
                  },
                  "$type": "color",
                  "$value": "{echoes.color.red.100}"
                }
              }
            },
            "medium": {
              "prefix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.orange.50}"
                }
              },
              "suffix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.orange.75}"
                },
                "hover": {
                  "$extensions": {
                    "studio.tokens": {
                      "modify": {
                        "type": "darken",
                        "value": "0.02",
                        "space": "lch"
                      }
                    }
                  },
                  "$type": "color",
                  "$value": "{echoes.color.orange.100}"
                }
              }
            },
            "low": {
              "prefix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.yellow.50}"
                }
              },
              "suffix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.yellow.100}"
                },
                "hover": {
                  "$extensions": {
                    "studio.tokens": {
                      "modify": {
                        "type": "darken",
                        "value": "0.02",
                        "space": "lch"
                      }
                    }
                  },
                  "$type": "color",
                  "$value": "{echoes.color.yellow.100}"
                }
              }
            },
            "info": {
              "prefix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.blue.50}"
                }
              },
              "suffix": {
                "default": {
                  "$type": "color",
                  "$value": "{echoes.color.blue.100}"
                },
                "hover": {
                  "$extensions": {
                    "studio.tokens": {
                      "modify": {
                        "type": "darken",
                        "value": "0.02",
                        "space": "lch"
                      }
                    }
                  },
                  "$type": "color",
                  "$value": "{echoes.color.blue.100}"
                }
              }
            }
          }
        },
        "foreground": {
          "blocker": {
            "icon": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.red.700}"
              }
            },
            "text": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.red.800}"
              }
            }
          },
          "high": {
            "text": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.red.700}"
              }
            },
            "icon": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.red.600}"
              }
            }
          },
          "medium": {
            "text": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.orange.800}"
              }
            },
            "icon": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.orange.600}"
              }
            }
          },
          "low": {
            "text": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.yellow.800}"
              }
            },
            "icon": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.yellow.700}"
              }
            }
          },
          "info": {
            "text": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.blue.800}"
              }
            },
            "icon": {
              "default": {
                "$type": "color",
                "$value": "{echoes.color.blue.700}"
              }
            }
          }
        },
        "borders": {
          "blocker": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.red.200}"
            }
          },
          "high": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.red.100}"
            }
          },
          "medium": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.orange.75}"
            }
          },
          "low": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.yellow.100}"
            }
          },
          "info": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.blue.100}"
            }
          }
        }
      }
    },
    "table": {
      "colors": {
        "background": {
          "header": {
            "default": {
              "$type": "color",
              "$value": "{echoes.color.grey.40}"
            }
          }
        }
      }
    }
  }
}
