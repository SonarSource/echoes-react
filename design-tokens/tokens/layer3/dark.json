{
  "echoes": {
    "form-control": {
      "colors": {
        "background": {
          "default" : {
            "value":"{echoes.color.background.default}",
            "type":"color"
          },
          "hover": {
            "value":"{echoes.color.background.default-hover}",
            "type":"color"
          }
        },
        "border": {
          "default": {
            "value": "{echoes.color.border.bold}",
            "type": "color"
          },
          "focus": {
            "value": "{echoes.color.border.weak}",
            "type": "color"
          }
        },
        "icon": {
          "default": {
            "value": "{echoes.color.icon.subdued}",
            "type": "color"
          }
        }
      }
    },
    "logos": {
      "colors": {
        "text": {
          "value": "#ffffff",
          "type": "color"
        },
        "brand": {
          "value": "#ffffff",
          "type": "color"
        },
        "sonar-whale": {
          "value": "#D3121D",
          "type": "color"
        }
      }
    },
    "modal": {
      "colors": {
        "shadow": {
          "gradient": {
            "value": "rgba(255,255,255,0.2)",
            "type": "color"
          }
        }
      }
    },
    "overlays": {
      "innerShadow": {
        "default": {
          "value": {
            "x": "0",
            "y": "-6",
            "blur": "10",
            "spread": "0",
            "color": "rgba(255,255,255,0.1)",
            "type": "innerShadow"
          },
          "type": "boxShadow"
        }
      }
    }
  }
}
