{
  "echoes": {
    "banner": {
      "sizes": {
        "height": {
          "$type": "sizing",
          "$value": "2.75rem"
        }
      }
    },
    "badge": {
      "sizes": {
        "height": {
          "small": {
            "$type": "sizing",
            "$value": "{echoes.dimension.height.500}"
          },
          "medium": {
            "$type": "sizing",
            "$value": "1.75rem"
          }
        }
      }
    },
    "form-control": {
      "borderRadius": {
        "default": {
          "$type": "borderRadius",
          "$value": "{echoes.borderRadius.400}"
        }
      },
      "sizes": {
        "height": {
          "default": {
            "$type": "sizing",
            "$value": "{echoes.dimension.height.900}"
          }
        }
      }
    },
    "layout": {
      "sizes": {
        "max": {
          "width": {
            "default": {
              "$type": "sizing",
              "$value": "1280px"
            },
            "large": {
              "$type": "sizing",
              "$value": "1560px"
            },
            "full": {
              "$type": "sizing",
              "$value": "100%"
            }
          }
        },
        "min": {
          "width": {
            "default": {
              "$type": "sizing",
              "$value": "1280px"
            }
          }
        }
      }
    },
    "sizes": {
      "overlays": {
        "maxWidth": {
          "default": {
            "$type": "sizing",
            "$value": "{echoes.dimension.width.5000}"
          }
        },
        "minWidth": {
          "default": {
            "$type": "sizing",
            "$value": "150px"
          }
        },
        "width": {
          "small": {
            "$type": "sizing",
            "$value": "25rem"
          },
          "default": {
            "$type": "sizing",
            "$value": "37.5rem"
          },
          "wide": {
            "$type": "sizing",
            "$value": "62.5rem"
          }
        },
        "maxHeight": {
          "default": {
            "$type": "sizing",
            "$value": "80vh"
          }
        }
      },
      "form-field": {
        "small": {
          "$type": "sizing",
          "$value": "150px"
        },
        "medium": {
          "$type": "sizing",
          "$value": "250px"
        },
        "large": {
          "$type": "sizing",
          "$value": "350px"
        },
        "full": {
          "$type": "sizing",
          "$value": "100%"
        }
      },
      "buttons": {
        "medium": {
          "$type": "sizing",
          "$value": "{echoes.dimension.height.800}"
        },
        "large": {
          "$type": "sizing",
          "$value": "{echoes.dimension.height.900}"
        }
      },
      "toggletips": {
        "height": {
          "$type": "sizing",
          "$value": "1rem"
        },
        "width": {
          "$type": "sizing",
          "$value": "1rem"
        }
      },
      "typography": {
        "maxWidth": {
          "default": {
            "$type": "sizing",
            "$value": "650px",
            "$description": "Use as max width in typography components"
          }
        }
      },
      "logo": {
        "height": {
          "small": {
            "$type": "sizing",
            "$value": "2rem"
          },
          "medium": {
            "$type": "sizing",
            "$value": "2.25rem"
          },
          "large": {
            "$type": "sizing",
            "$value": "2.5rem"
          }
        }
      },
      "breadcrumbs": {
        "maxWidth": {
          "default": {
            "$type": "sizing",
            "$value": "300px"
          }
        }
      }
    },
    "offset": {
      "dropdown": {
        "submenu": {
          "panel": {
            "vertical": {
              "$type": "sizing",
              "$value": "0px"
            },
            "horizontal": {
              "$type": "sizing",
              "$value": "8px"
            }
          }
        }
      }
    },
    "table": {
      "sizes": {
        "row": {
          "minWidth": {
            "default": {
              "$type": "sizing",
              "$value": "53px",
              "$description": "This is the minimum size we want for the row, regardless of the padding. It includes the 1px border, and as such must be used with box-sizing: border-box."
            }
          }
        }
      }
    },
    "toast": {
      "sizes": {
        "width": {
          "$type": "sizing",
          "$value": "25rem"
        }
      }
    }
  }
}